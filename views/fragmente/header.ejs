<!-- cerinta 5, sistemul de navigare in pagina acasa (navigarea secundară), dar si pentru celelalte pagini ale site-ului (navigarea principală)-->
<nav>
  <div id="menu-wrapper">
    <label id="hamburger" for="ch-menu">
      <div class="hamburger-menu">
        <div id="linie-top"></div>
        <div id="linie-mid"></div>
        <div id="linie-bot"></div>
      </div>
    </label>
    <input id="ch-menu" type="checkbox">
    <ul class="menu">
      <li>
        <div id="acasa"><a href="/index">Acasă</a></div>
        <div id="acasa-mediu"><a href="/index"><i class="fa-solid fa-house"></i></a></div>
        <ul>
          <li><a href="#Descriere">Descriere</a></li>
          <li><a href="#Oferte">Oferte</a>
            <ul class="disnone">
              <li><a href="#Oferte_incepatori">Oferte pentru începători</a></li>
              <li><a href="#Oferte_avansati">Oferte pentru avansați</a></li>
            </ul>
          </li>
        </ul>
      </li>
      <% if(locals?.utilizator?.areDreptul?.(Drepturi.vizualizareUtilizatori)) { %>
      <li>
        <div>Administrare</div>
        <ul>
          <li><a href="/useri">Useri</a></li>
          <li><a href="/grafice">Grafice</a></li>
          <li><a href="/comenzi">Comenzi</a></li>
        </ul>
      </li>
      <% } %>
      <li><a href="/produse">Produse</a>
        <ul>
          <% for (let opt of locals.optiuniMeniu) { %>
          <li><a href="/produse?categorie=<%- opt.unnest %>"><%- opt.unnest %> </a></li>
          <% } %>
        </ul>
      </li>
      <% if(!locals.utilizator) { %>
      <li><a href="/inregistrare" data-bs-toggle="modal" data-bs-target="#registerModal">Inregistrare</a></li>
      <li><a href="" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a></li>
      <% } %>
      <% if(locals.utilizator) { %>
      <li>
        <div><%- locals.utilizator.username %></div>
        <ul>
          <li><a href="/profil">Profil</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </li>
      <% } %>
      <li><a id="cos" href="" data-bs-toggle="modal" data-bs-target="#cosModal">Coșul tău</a></li>
    </ul>
  </div>
</nav>