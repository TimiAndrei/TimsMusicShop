<div id="grid-galerie">
    <% var i=0; %>
        <% var d_vara=new Date("July 13, 2014 11:13:00") %>
            <% var d=new Date(); %>
                <% var anotimp="" ; %>
                    <% if(d.getMonth()>= 2 && d.getMonth() <= 4) { anotimp="primavara" ; }%>
                            <% if(d.getMonth()>= 5 && d.getMonth() <= 7) { anotimp="vara" ; }%>
                                    <% if(d.getMonth()>= 8 && d.getMonth() <= 10) { anotimp="toamna" ; }%>
                                            <% if(d.getMonth()==0 || d.getMonth()==1 || d.getMonth()==11) {
                                                anotimp="iarna" ; }%>

                                                <% for (let imag of locals.imagini) { %>
                                                    <% if(imag.anotimp && imag.anotimp==anotimp) { %>
                                                        <% i=i + 1; %>
                                                            <% if(i>= 9) { break; }%>
                                                                <figure>
                                                                    <div id="img-container">
                                                                        <picture>
                                                                            <source media="(max-width:600px)"
                                                                                srcset="<%- imag.fisier_mic %>" />

                                                                            <source media="(max-width:1000px)"
                                                                                srcset="<%- imag.fisier_mediu %>" />

                                                                            <source media="(max-width:2400px)"
                                                                                srcset="<%- imag.fisier_mare %>" />
                                                                            <img src="<%- imag.fisier %>">
                                                                        </picture>
                                                                    </div>
                                                                    <% if(imag.autor) { %>
                                                                        <figcaption><%- imag.descriere %> by
                                                                                <%- imag.autor %></figcaption>
                                                                        <% } else { %>
                                                                            <figcaption><%- imag.descriere %>
                                                                            </figcaption>
                                                                            <% } %>
                                                                </figure>
                                                                <div id="gol"></div>
                                                                <div id="gol2"></div>
                                                                <% } %>
                                                                    <% } %>
</div>